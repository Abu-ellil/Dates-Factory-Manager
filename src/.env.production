# Production Environment Configuration for Date Factory Manager
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================

# Secret key for Flask sessions - Generate a strong random key
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=YOUR_GENERATED_SECRET_KEY_HERE

# Secret key for license generation and verification
# Use a different key from SECRET_KEY for better security
LICENSE_SECRET_KEY=YOUR_LICENSE_SECRET_KEY_HERE

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path (can be absolute or relative)
DATABASE_PATH=date_factory.db

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Set to 'production' for production deployment
FLASK_ENV=production

# Set to 'false' in production (enables/disables debug mode)
DEBUG=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Number of days to keep backup files (default: 30)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# TELEGRAM CONFIGURATION (Optional)
# =============================================================================

# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Get chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. NEVER commit the .env file to version control
# 2. Use different SECRET_KEY and LICENSE_SECRET_KEY
# 3. Ensure SECRET_KEY is at least 32 characters long
# 4. Change default passwords immediately after installation
# 5. Use HTTPS in production for all communications